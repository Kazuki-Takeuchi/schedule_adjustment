%h2
  = @event_information.name
%p
  %b 場所:
  = @event_information.place
%p
  %b 日時:
  = @event_information.start_date

- if is_admin?
  = link_to '変更', edit_event_information_path(@event_information)
  \|
= link_to '戻る', event_informations_path

%h2 イベント詳細

%table
  %thead
    %tr
      %th イベント名
      %th 開始時刻
      %th 会費
      %th 場所
      %th 参加人数
      %th 
      %th 
      - if current_user
        %th
      - if is_admin?
        %th

  %tbody
    - @event_information.sub_event_informations.each do |sub_event_information|
      %tr
        %td= sub_event_information.name
        %td= sub_event_information.get_only_start_time
        %td= sub_event_information.price
        %td= get_place_link(sub_event_information)
        %td
          %div{id: "#{get_attendance_count_id(current_user, sub_event_information)}"} #{sub_event_information.attendances.count}人
        - if sub_event_information.attendances.find_by(user: current_user)
          %td= link_to '参加する', event_information_sub_event_information_attendance_path(@event_information, sub_event_information), method: :delete, data: { remote: true }, id: get_attend_tag_id(current_user, sub_event_information)
        - else
          %td= link_to '参加しない', attend_event_information_sub_event_information_attendance_path(@event_information, sub_event_information), method: :post, data: { remote: true }, id: get_attend_tag_id(current_user, sub_event_information)
        %td= link_to '詳細', [@event_information, sub_event_information]
        - if current_user
          %td= link_to '変更', edit_event_information_sub_event_information_path(@event_information, sub_event_information)
        - if is_admin?
          %td= link_to '削除', event_information_sub_event_information_path(@event_information, sub_event_information), method: :delete, data: { confirm: 'Are you sure?' }

%br

- if current_user
  = link_to 'イベント詳細追加', new_event_information_sub_event_information_path(@event_information)

